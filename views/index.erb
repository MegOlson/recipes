<div class="row">
  <div class="col-md-6">
    <h2>Add a Recipe:</h2>
    <form action="/recipe" method="post" class= "form-group">

      <label for="recipe_title">Recipe Title</label>
      <input id="recipe_title" type="text" name="recipe_title" >

      <label for="instructions">Instructions</label>
      <input id="instructions" type="text" name="instructions" >

      <button type="submit" class="btn">Add Recipe</button>
    </form>

    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <ul>
          <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></li>
        </ul>
      <% end %>
    <% else %>
      <p>There are no recipes yet.</p>
    <% end %>

  </div>

  <div class="col-md-6">

    <h2>Add a Tag:</h2>
    <form action="/tag" method="post" class= "form-group">

      <label for="tag">Tag Type</label>
      <input id="tag" type="text" name="tag" >

      <button type="submit" class="btn">Add Tag</button>
    </form>

    <% if @tags.any? %>
      <% @tags.each do |tag| %>
        <ul>
          <li><a href="/tags/<%= tag.id %>"><%= tag.tag %></a></li>
        </ul>
      <% end %>
    <% else %>
      <p>There are no tags yet.</p>
    <% end %>

  </div>
</div>
