
<div class="row">
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Add a Recipe:</h2>
      </div>
      <div class="panel-body">
        <form action="/recipe" method="post" class= "form-group">
          <label for="recipe_title">Recipe Title</label>
          <input id="recipe_title" type="text" name="recipe_title" class="form-control" >
          <br>
          <label for="instructions">Instructions</label>
          <br>
          <textarea name="instructions" rows="10" class ="form-control"></textarea>
          <br>
          <button type="submit" class="btn">Add Recipe</button>
        </form>
      </div>
    </div>

    <h3>Recipes:</h3>
    <p><em>Recipes are sorted by top ratings</em></p>
    <% if @recipes.any? %>
      <% @recipes.each do |recipe| %>
        <ul>
          <li><a href="/recipes/<%= recipe.id %>"><%= recipe.title %></a></li>
        </ul>
      <% end %>
    <% else %>
      <p>There are no recipes yet.</p>
    <% end %>
  </div>

  <div class="col-md-3">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h2>Add a Tag:</h2>
      </div>
      <div class="panel-body">

        <form action="/tag" method="post" class= "form-group">

          <label for="tag">Tag Type</label>
          <input id="tag" type="text" name="tag" >

          <button type="submit" class="btn">Add Tag</button>
        </form>
        <% if @tags.any? %>
          <% @tags.each do |tag| %>
            <ul>
              <li><a href="/tags/<%= tag.id %>"><%= tag.tag %></a></li>
            </ul>
          <% end %>
        <% else %>
          <p>There are no tags yet.</p>
        <% end %>
      </div>
    </div>

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Search for recipes:</h3>
      </div>
      <div class="panel-body">

        <form action="/search" method="post" class= "form-group">

          <label for="ingredients">Ingredient</label>
          <input id="ingredients" type="text" name="ingredients" >

          <button type="submit" class="btn">Find Recipes</button>
        </form>
      </div>
    </div>
  </div>
</div>
