<h2><%= @recipe.title %></h2>

<p>Ingredients: <%= @ingredients %></p>
<p>Instructions: <%= @instructions %></p>

<form class="" action="/recipes/<%= @recipe.id %>/edit" method="post">
  <input type="hidden" name="_method" value="patch">
  <div class="form-group">
    <label for="recipe_title">Recipe Title</label>
    <input id="recipe_title" type="text" name="recipe_title" >

    <label for="ingredients">Ingredients</label>
    <input id="ingredients" type="text" name="ingredients" >

    <label for="instructions">Instructions</label>
    <input id="instructions" type="text" name="instructions" >
  </div>
  <br><button type="submit" name="button" class="btn">Update Recipe Details</button>
</form>

<br>

<form class="" action="/recipes/<%= @recipe.id %>/delete" method="post">
  <input type="hidden" name="_method" value="delete">
  <div class="form-group">
    <button type="submit" name="button" class="btn">Delete Recipe</button>
  </div>
</form>
<br>
<a href="/">Home</a>
